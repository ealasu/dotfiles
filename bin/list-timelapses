#!/usr/bin/env python3

'''list-timelapses

Usage:
  list-timelapses <dir> [-i <interval>] [-e <extension>] [--nogroup]

Options:
  -i <interval>	  Interval in seconds
  -e <extension>  Filename extension to look for
'''

import os
from itertools import groupby
from docopt import docopt
from pprint import pprint


def list_dir(dir):
	for root, dir, files in os.walk(dir):
		for file in files:
			yield os.path.join(root, file)

def partition(iter, fn):
	current_group = []
	prev = None
	for v in iter:
		if prev is not None and fn(prev, v):
			yield current_group
			current_group = []
		current_group.append(v)
		prev = v
	if len(current_group) > 0:
		yield current_group
	
def list_timelapses(dir, interval, ext, nogroup):
  pics = ((os.path.getmtime(f), f) for f in list_dir(dir) if f.lower().endswith('.' + ext.lower()))
  pics = sorted(pics)
  pprint(pics)
  groups = partition(pics, lambda a,b: b[0] - a[0] > interval)
  groups = [[f for _, f in g] for g in groups if len(g) > 5]
  for i, g in enumerate(groups):
  	with open(str(i), 'w') as f:
  		for x in g:
  			f.write(x + '\n')

if __name__ == '__main__':
	args = docopt(__doc__)
	print(args)

	interval = args['-i']
	if interval is None:
	  interval = 5.0
	else:
	  interval = float(interval)

	ext = args['-e']
	if ext is None:
	  ext = 'jpg'

	list_timelapses(os.path.abspath(args['<dir>']), interval=interval, ext=ext, nogroup=args['--nogroup'])
