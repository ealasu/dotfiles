#!/usr/bin/env bash
set -e

container="$1"
container_label="$2"
file="$3"

external_file="conf/$container_label/$file"
external_dir="conf/$container_label/$(dirname "$file")"

mkdir -p "$external_dir"
docker cp "$container:$file" "$external_file"

echo 'add this volume to your docker-compose.yml:'
echo "    - './$external_file:$file'"
